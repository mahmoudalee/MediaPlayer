<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/s_medium"
    android:background="@color/white">
    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/image"
        android:layout_height="@dimen/image"
        android:background="@color/hover"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/s_medium"
        android:paddingEnd="@dimen/s_medium"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/f_medium"
            android:textColor="@color/colorPrimaryDark"
            tools:text="Something Right"
            />
        <TextView
            android:id="@+id/artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/f_medium"
            android:textColor="@color/colorPrimary"
            tools:text="Katy Perry"
            />

    </LinearLayout>
</LinearLayout>